<Window x:Class="Select_Number"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Select_Number" Height="109.5" Width="278" WindowStyle="ToolWindow" ResizeMode="NoResize" >
    <Window.Resources>
        <ResourceDictionary Source="Styles.xaml"></ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="96" MaxHeight="41"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="203*"/>
            <ColumnDefinition Width="137*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtValue" Grid.ColumnSpan="2" Height="26" Margin="134,10,10,0" TextWrapping="Wrap"  VerticalAlignment="Top"/>
        <Label x:Name="lblTitle" Content="Enter a number: " FontWeight="Bold" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"   Height="26" FontSize="14"/>
        <Button x:Name="btnCancel" Content="Cancel" Margin="10,42,10,-30" Grid.Column="1" IsCancel="True"/>
        <Button x:Name="btnOkay" Content="Okay" Margin="73,42,0,-30" IsDefault="True"/>

    </Grid>
</Window>
