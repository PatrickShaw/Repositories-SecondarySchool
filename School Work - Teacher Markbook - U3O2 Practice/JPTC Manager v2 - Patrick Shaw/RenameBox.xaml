<Window x:Class="RenameBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChangeEmpiricalPercentage" Height="120" Width="296" WindowStyle="ToolWindow">
    <Window.Resources>
        <ResourceDictionary Source="Styles.xaml"/>
    </Window.Resources>
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="113*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtInput" HorizontalContentAlignment="Right"  Height="31" Margin="11,10,9.6,0" TextWrapping="Wrap" VerticalAlignment="Top" TabIndex="0" Grid.Column="1"/>
        <Label Content="Name:" Grid.Column="0" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Height="31" Width="60" Grid.ColumnSpan="2"/>
        <Button x:Name="btnOkay" Content="Okay" Margin="0,54,130.6,0" VerticalAlignment="Top" Height="28" Click="btnOkay_Click" IsDefault="True" Grid.ColumnSpan="2" HorizontalAlignment="Right" Width="116"/>
        <Button x:Name="btnCancel" Content="Cancel" Grid.Column="1" Margin="0,54,9.6,0" VerticalAlignment="Top" Height="28" IsCancel="True" Click="btnCancel_Click" HorizontalAlignment="Right" Width="116"/>

    </Grid>
</Window>
